---
const isProduction = import.meta.env.PUBLIC_ENV === 'production'
---

{
  // Google Consent Mode

  isProduction && (
    <script
      is:inline
      type="text/javascript"
      data-cookieconsent="ignore"
      src="/scripts/google-consent-mode.js"
    />
  )
}

{
  // Google Tag Manager
  isProduction && (
    <script
      is:inline
      type="text/javascript"
      data-cookieconsent="ignore"
      src="/scripts/google-tag-manager.js"
    />
  )
}
