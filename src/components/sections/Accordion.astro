---
import Section from '@/components/sections/Section.astro'
import HtmlHeading from '@/components/shared/HtmlHeading.astro'
import type { AccordionStoryblok } from '@/types/storyblok'
import type { SbBlokData } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import clsx from 'clsx'

export type Props = {
  class?: string
  blok: AccordionStoryblok
}

const { class: className, blok } = Astro.props
---

<Section blok={blok} defaultSpacing="md" class={clsx('area', className)}>
  <div class="area-content">
    {
      blok.headline && (
        <HtmlHeading
          class="mb-4 text-18 leading-125 text-steel md:mb-0"
          order={blok.headingOrder}
        >
          {blok.headline}
        </HtmlHeading>
      )
    }
    {
      blok.items?.map((item) => (
        <StoryblokComponent blok={item as unknown as SbBlokData} />
      ))
    }
  </div>
</Section>
