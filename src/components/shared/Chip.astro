---
import clsx from 'clsx'

export type Props = {
  class?: string
  label: string
  initialState: boolean
  value: string
  [key: string]: any
}

const { class: className, initialState, label, value, ...props } = Astro.props
---

<button
  aria-pressed={initialState}
  class={clsx(
    'inline-flex max-w-full flex-none items-center truncate whitespace-nowrap rounded px-3 py-2.5 text-18 leading-none transition-colors',
    'border border-steel-500 bg-creme text-steel',
    'hovers:hover:border-spark hovers:hover:text-spark',
    'aria-pressed:border-spark aria-pressed:bg-spark aria-pressed:!text-white',
    'focus:ring-none focus:outline-none focus:ring-offset-2',
    className,
  )}
  data-filter-value={value}
  {...props}
>
  {label}
</button>
